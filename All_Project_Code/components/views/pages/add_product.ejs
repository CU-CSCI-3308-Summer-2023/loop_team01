<%- include ('../partials/header') %> 
<%- include ('../partials/secondary_menu') %>

<html>
    <body>
        <form action='/add' method='POST' id="fileInput">
            <div class="form-group">
              <label for="exampleFormControlFile1">Item URL</label>
              <input type="text" class="form-control" id="exampleFormControlFile1" name="image_url" placeholder="https://image.com" required>
            </div>
            <div class="form-group">
                <label for="name">Item Name</label>
                <input type="ItemName" class="form-control" id="ItemName" name='name' aria-describedby="ItemName" placeholder="Shirt..." required>
            </div>
            <div class="form-group">
                <label for="itemDescription">Item Description</label>
                <textarea type="Item Description" class="form-control" name='description' id="itemDescription" placeholder="Item Description" rows="2" style="width: 350px;" required></textarea>
            </div>
            <div class="form-group">
                <label for="price">Item Size</label>
                <input type="Item Size" class="form-control" name='size' id="size" placeholder="s/m/l or 7/8/9" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="price" class="form-control" id="price" name='price' aria-describedby="price" placeholder="25.00" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </body>
</html>

<%- include ('../partials/footer') %>